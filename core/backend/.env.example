# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=30
REFRESH_TOKEN_SECRET=your_refresh_token_secret
MFA_SECRET=your_mfa_secret

# Database
MONGODB_URI=mongodb://localhost:27017/workflow-management
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=workflow:

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_SES_REGION=us-east-1

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_BASIC_PLAN_ID=price_basic123
STRIPE_PRO_PLAN_ID=price_pro123
STRIPE_ENTERPRISE_PLAN_ID=price_enterprise123

# Email Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=Your App Name

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback
GOOGLE_CALENDAR_ID=your_calendar_id

# File Upload
MAX_FILE_SIZE=5242880
MAX_FILES=5
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=120

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_DIR=logs

# Security
CORS_ORIGIN=http://localhost:3001
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
SECURE_COOKIE=false
COOKIE_SECRET=your_cookie_secret
ENCRYPTION_KEY=your_encryption_key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100
SENTRY_DSN=your_sentry_dsn

# Plugin System
PLUGINS_DIR=plugins
PLUGIN_STORE_URL=https://your-plugin-store.com
ENABLE_PLUGIN_UPDATES=true
PLUGIN_UPDATE_INTERVAL=86400

# Feature Flags
ENABLE_MFA=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_FILE_UPLOAD=true
ENABLE_NOTIFICATIONS=true
ENABLE_API_DOCS=true

# Business Logic
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD
TRIAL_DAYS=14
PASSWORD_RESET_EXPIRE=3600
VERIFICATION_TOKEN_EXPIRE=86400

# External Services
SLACK_WEBHOOK_URL=your_slack_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=Your API Title
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=Your API Description

# Development
DEBUG=app:*
ENABLE_SWAGGER=true
ENABLE_MORGAN=true
ENABLE_COMPRESSION=true

# Testing
TEST_MONGODB_URI=mongodb://localhost:27017/workflow-management-test
TEST_JWT_SECRET=test_jwt_secret
TEST_EMAIL=test@example.com

# Deployment
DEPLOYMENT_ENV=development
DEPLOYMENT_REGION=us-east-1
ENABLE_SSL=false
SSL_KEY_PATH=path/to/ssl/key
SSL_CERT_PATH=path/to/ssl/cert

# Backup
BACKUP_ENABLED=true
BACKUP_FREQUENCY=86400
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=google
GOOGLE_ANALYTICS_ID=your_ga_id

# Webhooks
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=10000
MAX_WEBHOOK_RETRIES=3

# Performance
COMPRESSION_LEVEL=6
BODY_PARSER_LIMIT=10mb
REQUEST_TIMEOUT=60000
KEEP_ALIVE_TIMEOUT=5000

# Internationalization
DEFAULT_LOCALE=en
AVAILABLE_LOCALES=en,es,fr
FALLBACK_LOCALE=en

# Customer Support
SUPPORT_EMAIL=support@yourapp.com
HELP_CENTER_URL=https://help.yourapp.com
ENABLE_CHAT_SUPPORT=true
